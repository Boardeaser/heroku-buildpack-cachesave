#!/usr/bin/env bash

set -e # fail fast


BUILD_DIR=$1
CACHE_DIR=$2


echo "=====> Caching files for future builds"

for FILENAME in `cat ${BUILD_DIR}/.buildcache`; do
  if [[ -n ${FILENAME} && -e ${BUILD_DIR}/${FILENAME} ]]; then
    echo "       ${FILENAME}"
    cp -r ${BUILD_DIR}/${FILENAME} ${CACHE_DIR}/
  fi
done
